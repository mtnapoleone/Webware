// Adding code to create an effect on the header/nav on scroll
jQuery(function( $ ){

	if( $( document ).scrollTop() > 120 ){
		$( '.scrollhead' ).addClass( 'sticky' );			
	}

	// Add opacity class to site header
	$( document ).on('scroll', function(){

		if ( $( document ).scrollTop() > 120 ){
			$( '.scrollhead' ).addClass( 'sticky' );			

		} else {
			$( '.scrollhead' ).removeClass( 'sticky' );			
		}

	});


});